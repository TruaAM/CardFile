@model PL.Models.RegisterModel

<div class="container">
    <div class="row mb-3">
        <div class="col-sm-7 order-12 order-sm-1 brand-holder">
            <form class="form-register" asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                <h1 class="h3 mb-3 font-weight-normal">Registration</h1>
                <div class="validation" asp-validation-summary="All"></div>
                <div>
                    <div class="form-group">
                        <label asp-for="Email">Input Email</label><br />
                        <input type="text" asp-for="Email" />
                        <span asp-validation-for="Email" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Input password</label><br />
                        <input asp-for="Password" />
                        <span asp-validation-for="Password" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword">Repeat password</label><br />
                        <input asp-for="ConfirmPassword" />
                        <span asp-validation-for="ConfirmPassword" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Login">Input Login</label><br />
                        <input type="text" asp-for="Login" />
                        <span asp-validation-for="Login" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Name">Input Name</label><br />
                        <input type="text" asp-for="Name" />
                        <span asp-validation-for="Name" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Surname">Input Surname</label><br />
                        <input type="text" asp-for="Surname" />
                        <span asp-validation-for="Surname" />
                    </div>
                    <div class="checkbox mb-3">
                        <label>
                            Already have an account? <a asp-action="Login" asp-controller="Account">Log in</a>
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Registrate" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>